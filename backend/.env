# Environment configuration for Amount Detection Service

# Debug mode
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Tesseract OCR configuration
# Update the path below to match your Tesseract installation
# Windows example:
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux/Mac example:
# TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_CMD=C:\Users\nhari\AppData\Local\Programs\Tesseract-OCR\tesseract.exe

# Processing thresholds
PROCESSING_CONFIDENCE_THRESHOLD=0.6
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
MIN_OCR_CONFIDENCE=0.3

# Amount validation limits
MAX_AMOUNT_VALUE=1000000
MIN_AMOUNT_VALUE=0.01

# Image processing limits
MAX_IMAGE_SIZE=10485760  # 10MB in bytes

# API configuration
API_HOST=0.0.0.0
API_PORT=8000